# Environment variables template
# Copy this file to .env and update with your actual values

# Application configuration
NODE_ENV=production
APP_PORT=3000
MAX_MEDIA_SIZE=100  # MB

# Database configuration (PostgreSQL)
DB_HOST=postgres #localhost if you run in the dev environment
DB_PORT=5432
DB_NAME=weaver
DB_USER=weaver_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# MinIO configuration (S3-compatible storage)
MINIO_ENDPOINT=minio #localhost if you run in the dev environment
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_USER=CHANGE_THIS_ACCESS_KEY
MINIO_SECRET_PASSWORD=CHANGE_THIS_SECRET_KEY
MINIO_BUCKET=media-files
